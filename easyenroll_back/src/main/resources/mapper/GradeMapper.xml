  <sql id="Base_Column_List">
    id, course_code, sno, grade, `state`
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from grade
    where id = #{id,jdbcType=INTEGER}
  </select>
    <select id="selectBySnoByCourseCode" resultMap="BaseResultMap">
      SELECT
          *
      FROM
          grade
      WHERE
          sno = #{sno}
      AND
          course_code = #{courseCode}
    </select>
  <select id="selectPOBySno" resultMap="POResultMap">
    SELECT
      g.id as grade_id,
      g.course_code,
      g.sno,
      g.grade,
      g.state,
      c.id as course_id,
      c.name as course_name,
      c.credit,
      c.course_type,
      c.college,
      c.capacity,
      c.remain,
      c.is_seckill,
      c.semester,
      c.description,
      t.name as teacher_name,
      c.class_time,
      c.class_location,
      c.week_range,
      c2.course_code as pre_course_code,
      t.tno
    FROM grade g
           LEFT JOIN courses c ON g.course_code = c.course_code
           LEFT JOIN teachers t ON t.id = c.teacher_id
           LEFT JOIN courses c2 ON c.pre_course = c2.id
    WHERE g.sno = #{sno}
  </select>

    <select id="selectGradeDTOBySno" resultType="com.ly.dto.GradeDTO">
        SELECT
          g.course_code as courseCode,
          c.name as courseName,
          g.grade,
          g.state
        FROM
            grade g LEFT JOIN courses c ON c.course_code = g.course_code
        WHERE
            g.sno = #{sno}
    </select>
  <select id="selectAvgGradesBySno" resultType="java.lang.Double">
    SELECT
        COALESCE(AVG(grade), 0) AS average_grade
    FROM
        grade
    WHERE
        sno = #{sno}
  </select>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from grade
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.ly.pojo.Grade" useGeneratedKeys="true">
    insert into grade (course_code, sno, grade, 
      `state`)
    values (#{courseCode,jdbcType=VARCHAR}, #{sno,jdbcType=BIGINT}, #{grade,jdbcType=DOUBLE}, 
      #{state,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.ly.pojo.Grade" useGeneratedKeys="true">
    insert into grade
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="courseCode != null">
        course_code,
      </if>
      <if test="sno != null">
        sno,
      </if>
      <if test="grade != null">
        grade,
      </if>
      <if test="state != null">
        `state`,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="courseCode != null">
